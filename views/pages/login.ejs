  <!DOCTYPE html>
  <html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link href="/css/page.css" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

      <!--Let browser know website is optimized for mobile-->
      <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
      <meta name="HandheldFriendly" content="true" />
    </head>
    <body class="teal lighten-1">
      <div class="row margin-top">
        <form class="col l4 s12 card-panel offset-l4" method="post">
          <h3 class="center-align">Login</h3>
          <div class="row">
          <% if(locals.error){%>
            <div class="red-text">
              <%= error%>
            </div>
          <% } %>
          <% if(status == "unverified"){%>
            <div class="green-text">
              A verification email has been sent.
            </div>
          <% } %>
          <% if(status == "verified"){%>
            <div class="green-text">
              Your account has been created.
            </div>
          <% } %>
          <% if(status == "forgot"){%>
            <div class="green-text">
              A reset password email had been sent.
            </div>
          <% } %>
          <% if(status == "reset"){%>
            <div class="green-text">
              Your password has been reset.
            </div>
          <% } %>
            <div class="input-field col s12">
              <input id="email" type="email" name="login" class="validate">
              <label for="email" data-error="Can't you fiqure out how to type an email?" data-success="">Email</label>
            </div>
            <div class="input-field col s12">
              <input id="password" type="password" name="password" pattern="^.*(?=.{8,})(?=.*[a-zA-Z])(?=.*\d).*$" class="validate">
              <label for="password" data-error="Type a good password." data-success="">Password</label>
            </div>
            <button class="btn waves-effect waves-light" type="submit">Login
            <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
        <div class="col l4 s12 offset-l4">
            <a class="left lime-text text-darken-1" href="/forgot">Forgot Password</a>
            <a class="right lime-text text-darken-1" href="/register">Register</a>
        </div>
      </div>
      <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    </body>
  </html>