<div id='<%= id %>' class="col-xs-12">
  <input type="hidden" class="id" value="<%= id %>" name="id"/>
  <h4 class="col-xs-4">ID:<%= id %></h4>
  <div class=col-xs-4>
      <input type="text" class="form-control name" placeholder="name" <% if(name){ %> value="<%= name %>" <%} %>/>
  </div>
  <div class="btn-group col-xs-4">
    <button onclick="saveToDevice('<%= id %>','<%= addr %>')" type="button" class="col-xs-6 btn btn-default">Save</button>
    <% if(!devices.includes(id)){ %>
      <button onclick="addDevice('<%= id %>','<%= addr %>')" class="col-xs-6 btn btn-default">Add to Account</button>
    <% } else { %>
      <button onclick="removeDevice('<%= id %>','<%= addr %>')" class="col-xs-6 btn btn-default">Remove from Account</button>
    <% } %>
  </div>
</div>
